# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL sur Render)
DATABASE_URL=postgresql://username:password@host:5432/plant_healthcheck
DB_HOST=your-postgres-host.render.com
DB_PORT=5432
DB_NAME=plant_healthcheck
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=true

# Firebase Configuration (pour Auth uniquement)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Email Configuration (pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@ocp.ma
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=PlantHealthCheck <noreply@ocp.ma>

# CORS Configuration
ALLOWED_ORIGINS=https://planthealthcheck.lovable.app,http://localhost:5173

# Storage Configuration (pour documents)
STORAGE_TYPE=local
STORAGE_PATH=/tmp/uploads
# Si vous utilisez AWS S3 plus tard :
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=plant-healthcheck-documents
# AWS_REGION=eu-west-1
