{
  "name": "plant-healthcheck-api",
  "version": "1.0.0",
  "description": "PlantHealthCheck API Backend - OCP Morocco",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql",
    "seed": "node database/seeds/import.js",
    "seed:firestore": "node -e 'require(\"./src/config/firebase\").importSeedData()'",
    "test": "jest --coverage",
    "lint": "eslint src/",
    "deploy": "npm run migrate && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.13.0",
    "nodemailer": "^6.9.7",
    "jsonwebtoken": "^9.0.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
